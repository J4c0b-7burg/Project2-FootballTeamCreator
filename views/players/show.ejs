<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>

    <body>
        <link rel="stylesheet" type="text/css" href='/styles.css'/>


        <main>
            <div>
                    <article>
                            <h1 class="name">
                                <%= player.name %>
                            </h1>
                            <h2 class="position">
                                <%= player.position %>
                            </h2>
                            <h2 class="country">
                                <%= player.country %>
                            </h2>
                            <h2 id="OVR"></h2>
                            <h2 class="PAC">
                                <%= player.PAC %> PAC
                            </h2>
                            <h2 class="SHO">
                                <%= player.SHO %> SHO
                            </h2>
                            <h2 class="PAS">
                                <%= player.PAS %> PAS
                            </h2>
                            <h2 class="DRI">
                                <%= player.DRI %> DRI
                            </h2>
                            <h2 class="DEF">
                                <%= player.DEF %> DEF
                            </h2>
                            <h2 class="PHY">
                                <%= player.PHY %> PHY
                            </h2>
                            <div class="StatsIMG"></div>
                            <div class="BLNKFace"></div>
                            <a href="/players/<%= player._id %>/edit">
                               <button>Edit</button>
                            </a>
                            <form action="/players/<%= player._id %>?_method=DELETE" method="POST">
                                <input type="submit" value="Delete" />
                            </form>
                            <a href="/players/"> 
                                <button>Back</button>
                            </a>
                    </article>

            </div>
        </main>
        <script defer>
            let Array = parseInt[player.PAC, player.SHO, player.PAS, player.DRI, player.DEF, player.PHY]

            let OVR = Array.reduce((a, b) => a + b, 0) / Array.reduce

            console.log(OVR)
            console.log(Array)
            document.getElementById("OVR").innerHTML = OVR + "OVR";
        </script>
    </body>
</html>